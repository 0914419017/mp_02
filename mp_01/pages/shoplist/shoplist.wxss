/* pages/shoplist/shoplist.wxss */
.shop-item{
    display: flex;
    padding: 15rpx;
    border: 1rpx solid #efefef;
    /* 圆角 */
    border-radius: 12rpx;
    margin: 15rpx;
    box-shadow: 1rpx 1rpx 15rpx #ddd;
}

.thumb image{
    width: 250rpx;
    height: 250rpx;
    display: block;
    margin-right: 15rpx;
}

.info{
    display: flex;
    flex-direction:column;
    justify-content: space-around;
    font-size: 24rpx;
}
/* 加黑 */
.shop-title{
    font-weight: bold;
}